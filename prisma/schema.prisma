generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Article {
  //defaults
  id      String   @id @default(uuid())
  created DateTime @default(now())
  updated DateTime @updatedAt

  //props
  title String
  body  String
  tags  String[]
}

model Song {
  // Defaults
  id      String   @id @default(uuid())
  created DateTime @default(now())
  updated DateTime @updatedAt

  // Properties
  title     String
  duration  Int
  thumbnail String
  audio     String
  explicit  Boolean
  tags      String[]

  // Relations
  artist   Artist @relation(fields: [artistId], references: [id])
  artistId String
}

model Artist {
  // Defaults
  id      String   @id @default(uuid())
  created DateTime @default(now())
  updated DateTime @updatedAt

  // Properties
  title       String
  thumbnail   String
  banner      String
  description String
  listeners   Int
  uploads     Int

  // Relations
  songs Song[]
}

model Report {
  //defaults
  id      String   @id @default(uuid())
  created DateTime @default(now())
  updated DateTime @updatedAt

  //props
  resolved    Boolean @default(false)
  title       String
  description String
  important   Boolean @default(false)
}
