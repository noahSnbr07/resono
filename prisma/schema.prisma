generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model article {
  //defaults
  id      String   @id @default(uuid())
  created DateTime @default(now())
  updated DateTime @updatedAt

  //props
  title String
  body  String
  tags  String[]
}

model song {
  //defaults
  id      String   @id @default(uuid())
  created DateTime @default(now())
  updated DateTime @updatedAt

  //props 
  artists   artist[]
  title     String
  duration  Int
  thumbnail String
  audio     String
  explicit  Boolean
}

model artist {
  //defaults
  id      String   @id @default(uuid())
  created DateTime @default(now())
  updated DateTime @updatedAt

  //props
  title       String
  thumbnail   String
  banner      String
  description String
  listeners   Int
  uploads     Int

  //relations
  song   song?   @relation(fields: [songId], references: [id])
  songId String?
}

model report {
  //defaults
  id      String   @id @default(uuid())
  created DateTime @default(now())
  updated DateTime @updatedAt

  //props
  resolved    Boolean @default(false)
  title       String
  description String
  important   Boolean @default(false)
}
